---
import '../styles/style.css'
const profile = {
  bio: "Moje meno je Lucia, mám 20 rokov a som študentkou odevného dizajnu. Móda a dizajn sú mojou vášňou, pričom sa špecializujem na navrhovanie jedinečných, ručne vyrábaných kabeliek. Počas štúdia sa venujem prepojeniu nadčasových štýlov s modernými trendmi, pričom kladiem dôraz na štýl a funkčnosť. Každá kabelka, ktorú navrhujem, je výsledkom mojej kreatívnej vízie a dôrazu na detaily. Začínam skicovaním návrhov inšpirovaných každodenným životom, umením a prírodou. Potom starostlivo vyberám materiály, ktoré zlepšia dizajn aj praktickosť. Od prvej skice po posledný steh je každý kúsok vytvorený s láskou a precíznosťou. Preskúmaj moju tvorbu a pridaj sa ku mne na tejto vzrušujúcej ceste módy a kreativity!",
  profilePic: "/profile-pic.jpg", 
  contact: {
    email: "lussovita.customer@gmail.com",
  }
};

const products = [
  {
    id: 1,
    name: "City Muse",
    description: "100% polyester.",
    price: "70€",
    image: "/products/tshirt.jpg" 
  },
  {
    id: 2,
    name: "Urban Icon",
    description: "100% polyester",
    price: "40€",
    image: "/products/mug.jpg"
  },
  {
    id: 3,
    name: "Metropolitan Dream",
    description: "100% polyester",
    price: "50€",
    image: "/products/sticker.jpg"
  }
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About Me + Shop - {profile}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>LussoVita</h1>
    </header>
    <main> 
      <svg
      height="200"
      width="200"
      
    <?xml version="1.0" encoding="UTF-8"?>
    <svg id="Layer_1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 105.46 140.59">
      <g id="Layer_5">
        <path d="M57.02,109.81c-20.71,0-37.5-17.01-37.5-38" style="fill: none; stroke: #000; stroke-miterlimit: 10; stroke-width: 7px;"/>
      </g>
      <g id="Layer_5_copy">
        <path d="M57.02,98.39c-15.19,0-27.5-12.59-27.5-28.12s12.31-28.12,27.5-28.12" style="fill: none; stroke: #000; stroke-miterlimit: 10; stroke-width: 7px;"/>
      </g>
      <g id="Layer_5_copy_2">
        <circle cx="57.37" cy="70.27" r="16.74" style="fill: none; stroke: #000; stroke-miterlimit: 10; stroke-width: 7px;"/>
      </g>
    </svg>
    <!-- About Me Section -->
    <main>
      <section class="profile">
        <img src={profile.profilePic}={profile} class="profile-pic" />
        <h2>{profile}</h2>
        <p>{profile.bio}</p>
      </section>

      <section class="contact">
        <h3>kontakt</h3>
        <p>Email: <a href={`mailto:${profile.contact.email}`}>{profile.contact.email}</a></p>
      </section>

      <!-- eShop Section -->
      <section class="eshop">
        <h2>zoznam produktov</h2>
        <div class="products-grid">
          {products.map((product) => (
            <div class="product-card" ={product.id}>
              <img src={product.image} alt={product.name} class="product-image" />
              <h3>{product.name}</h3>
              <p>{product.description}</p>
              <p class="price">{product.price}</p>
              <button class="buy-btn">Buy Now</button>
            </div>
          ))}
        </div>
      </section>
    </main>
  </body>
</html>